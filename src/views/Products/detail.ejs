<body>
    <!--partial de HEADER-->

    <%- include('../parciales/header') %>

    <main>
        <section class="imagenes-y-eleccion">
            <div class="imagenes-producto">
                <div class="imagen-producto-principal">
                    <h2></h2>
                    <img src="/images/prendas/<%= producto.image %>" alt="<%= producto.name %>" width="80%">
                </div>
