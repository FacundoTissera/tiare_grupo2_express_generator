            </div>
            <div class="div-eleccion-producto">
                <form action="/cart/productCart" method="GET" class="eleccion-producto">
                    
                    <p><%= producto.name %> <br><br>$ <%= producto.price %>  </p>
                    <p><%=producto.categorias.category%></p>
                    <fieldset>
                        <legend>Elige un color</legend>
                        <% for (let i=0; i<producto.colores.length; i++){%>
                            <label>
                                <input type="radio" name="color" value="<%=producto.colores[i].color%>" class="color"><%=producto.colores[i].color%>
                            </label>
                        <% } %> 
                    </fieldset>
                    <fieldset>
                        <legend>Elige un talle</legend>
                        <% for (let i=0; i<producto.talles.length; i++){%>
                            <label>
                                <input type="radio" name="talle" value="<%=producto.talles[i].size%>" class="talle"><%=producto.talles[i].size%>
                            </label>
                        <% } %> 
                    </fieldset>
                    <div class="agregar-carrito">
                        <button type="submit" class="agregar-carrito" > Agregar al carrito</button></a>
                    </div>
                    <div class="descripcion-del-producto">
                        <p>Descripción:</p>
                        <p><%= producto.description %> 
                        </p>
                    </div>
                    
                </form>
            </div>
        </section>
        <section class="botones-editar-borrar">

                    <a href="/admin/editar/<%=producto.id %>" class="editar-producto" >EDITAR PRODUCTO</a>
                    
                    <form action="/admin/borrar/<%= producto.id %>?_method=DELETE " method="POST">
                        <button type="submit"class="borrar-producto">ELIMINAR</button> 
                    </form>
                        
        </section>          
                
        <section class="medidas">
            <table  name="tabla-de-medidas">
