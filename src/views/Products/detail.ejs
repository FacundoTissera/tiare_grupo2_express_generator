                    <tr>
                        <td>Contorno</td>
                        <td>100 cm</td>
                        <td>104 cm</td>
                        <td>106 cm</td>
                        <td>110 cm</td>
                        <td>114 cm</td>
                        
                    </tr>
                    <tr>
                        <td>Largo de manga</td>
