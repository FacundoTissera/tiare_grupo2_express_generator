  <main class="main-formulario">
    <fieldset>
    <legend class="titulo-fieldset">Estás editando: <%=productoAEditar.nombre %></legend>
      
      <form action="/products/editar/<%=productoAEditar.id%>?_method=PUT" method="POST"  class="formulario-nuevo-producto">
        <div class="nombre-producto">
          <label for="producto" class="titulo-formulario-producto">NOMBRE DEL PRODUCTO:</label>
          <input type="text" name="nombre" id="producto" value= "<%=productoAEditar.nombre%>" required>
        </div>

        <div class="categoria-producto">
          <label for="categoria" class="titulo-formulario-producto">CATEGORIA DEL PRODUCTO:</label>
          <select name="categoria" id="categoria"required>
          
            <option value="pantalones-y-shorts" <% if (productoAEditar.categoria == "pantalones-y-shorts"){ %>
            selected <% } %> >Pantalones y Shorts </option>
            <option value="remeras-y-camisas"<% if (productoAEditar.categoria == "remeras-y-camisas"){ %>
                selected <% } %>>Remeras y Camisas</option>
            <option value="abrigos" <% if (productoAEditar.categoria == "abrigos"){ %> 
                selected <% } %> >Abrigos</option>
            <option value="faldas-y-vestidos"<% if (productoAEditar.categoria == "faldas-y-vestidos"){ %> 
                selected <% } %>>Faldas y Vestidos</option>
            <option value="accesorios"<% if (productoAEditar.categoria == "accesorios"){ %> 
                selected <% } %>>Accesorios</option>
           
          </select>
        </div>
      
        <p class= titulo-formulario-producto>IMÁGEN DEL PRODUCTO:</p>
        <div class="fotos-producto">
          <div class="foto">
            <i class="fas fa-camera"></i>
          </div>

          <!--<div class="foto"> 
            <i class="fas fa-camera"></i>
            </div>

          <div class="foto">
            <i class="fas fa-camera"></i>
          </div> -->
        </div>

        <div class="descripcion-producto">
          <label for="descripcion" class="titulo-formulario-producto" >DESCRIPCIÓN</label>
          <textarea rows="8" name="descripcion" id="descripcion"><%= productoAEditar.descripcion%></textarea>
        </div>

        <div class="precio">
          <label for="precio" class="titulo-formulario-producto">PRECIO</label>
          <input type="tel" name="precio" id="precio" value="<%= productoAEditar.precio%> " required>
        </div>

        <!--<div class="stock">
          <label for="stock" class="titulo-formulario-producto">Cantidad disponible:</label>
          <select name="stock" id="stock">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
          </select>
        </div>

        <div class="talles">
          <label for="talles" class="titulo-formulario-producto">Talle:</label>
