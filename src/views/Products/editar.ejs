          </select>
        </div> -->

        <div class="color">
          <label for="color" class="titulo-formulario-producto">Color:</label>
          <select name="color" id="color">
            <option value="Blanco"<% if (productoAEditar.color == "Blanco"){ %> 
                selected <% } %>>Blanco</option>
            <option value="Negro"<% if (productoAEditar.color == "Negro"){ %> 
                selected <% } %>>Negro</option>
            <option value="Rojo"<% if (productoAEditar.color == "Rojo"){ %> 
                selected <% } %>>Rojo</option>
            <option value="Tostado"<% if (productoAEditar.color == "Tostado"){ %> 
                selected <% } %>>Tostado</option>
            <option value="Rosa"<% if (productoAEditar.color == "Rosa"){ %> 
                selected <% } %>>Rosa</option>
            <option value="Gris"<% if (productoAEditar.color == "Gris"){ %> 
                selected <% } %>>Gris</option>
            <option value="Celeste"<% if (productoAEditar.color == "Celeste"){ %> 
                selected <% } %>>Celeste</option>
            <option value="Azul"<% if (productoAEditar.color == "Azul"){ %> 
                selected <% } %>>Azul</option>
            <option value="Verde<% if (productoAEditar.color == "Verde"){ %> 
                selected <% } %>">Verde</option>
          </select>

          <div>
            <label for="sale">PUBLICAR</label> <br>
            <select name="sale" id="sale">
              <option value="si"<% if (productoAEditar.sale== 'si') { %>
              
              selected<% } %>>Si</option>
              <option value="no"<% if (productoAEditar.sale== 'no') { %>
              
              selected<% } %>>No</option>
            </select>
          </div>
          <div class="boton-producto">
            <button class="agregar" type="submit">MODIFICAR PRODUCTO</button>
          </div>
        </div>
      </form>
    </fieldset> 
