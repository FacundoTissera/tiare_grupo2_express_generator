<!DOCTYPE html>
<html lang="en">

<!--Partial de HEAD-->
<%- include('../parciales/adminHead') %>

<body>
    <!--partial de HEADER-->

    <%- include('../parciales/adminHeader') %>
    
<main class= "listado-productos" >  
    <article class="boton-lista">
        <a href="/admin/newProduct" class="boton-crear">CREAR NUEVO PRODUCTO</a>
    </article>

    <article class="listado-edit">
      <table class="tabla">
          <thead>
            <tr class='columnas'>
              <th scope="col">Id</th>
              <th scope="col">Nombre</th>
              <th scope="col">Ver</th>
              <th scope="col">Editar</th>
              <th scope="col">Borrar</th>
            </tr>
          </thead>
          <tbody>
            <% Producto.forEach(producto => { %>
            <tr>
                <td><%= producto.id%> </td>
                <td><%= producto.name%> </td>
                <td><a href="/products/detalle/<%= producto.id%> "> <i class="icono-lista fas fa-eye"></i></a></td>
                <td><a href="/admin/editar/<%= producto.id%> "> <i class="icono-lista far fa-edit"></i></a></td>
<!--dentro de la tabla la funcion borrar tiene que ir dentro de un formulario-->
                <td><form action="/admin/borrar/<%= producto.id%>?_method=DELETE " method="POST">
                        <button type="submit"class="borrar-producto"><i class="icono-lista fas fa-trash-alt"></i></button> 
                    </form>
                </td>
            </tr>
            <% }); %>
          </tbody>
        </table> 
      </article>       
</main>       