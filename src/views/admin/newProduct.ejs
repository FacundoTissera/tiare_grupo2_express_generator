<body>
  <!--parcial de la barra de ADMIN -->
  <%- include('../parciales/adminHeader') %>

  <main class="main-formulario">
    <fieldset>
    <legend class="titulo-fieldset">AGREGAR UN NUEVO PRODUCTO</legend>
      
      <form action="/admin/newProduct" method="POST"  class="formulario-nuevo-producto" enctype="multipart/form-data" >
        
        <div class="nombre-producto">
          <label for="producto" class="titulo-formulario-producto">NOMBRE DEL PRODUCTO:</label>
          <input type="text" 
            name="nombre" 
            id="producto" 
            placeholder="Ej: REMERA MILÁN" 
            class="input-nombre <%=locals.errors && errors.nombre ? "is-invalid" :null %> "
            value="<%= locals.oldData ? oldData.nombre :null%>">

          <%if (locals.errors && errors.nombre){%>
            <div class="text-danger">
              <%=errors.nombre.msg%>
            </div>
          <%}%>
        </div>

        <div class="categoria-producto">
          <label for="categoria" class="titulo-formulario-producto">CATEGORIA DEL PRODUCTO:</label>
          <select 
            name="categoria" 
            id="categoria"
            class="eleccion-opciones <%= locals.errors && errors.categoria ?  "is-invalid" : null %>">

            <option value="">Elegí una categoría</option>

            <% for (let i=0; i < categorias.length; i++) { %> 
              <option <%if (locals.oldData && locals.oldData.categoria) { %>
                          <% if (locals.oldData.categoria == categorias[i].category) { %> 
                          selected
                          <% } %> 
                        <% } %> 
                value="<%= categorias[i].id %>"><%=categorias[i].category%> 
            </option>
            <% } %>

          </select>
          <%if (locals.errors && errors.categoria){%>
            <div class="text-danger">
              <%=errors.categoria.msg%>
            </div>
          <%}%>
        </div>
      
        <p class= titulo-formulario-producto>IMÁGEN DEL PRODUCTO</p>
        <div class="fotos-producto">
          <div class="foto"> 
              <i class="fas fa-camera"></i>
          </div>
          <div class="input-foto">
              <label for="foto-principal" name="fotoPrinc"class="titulo-imagen">IMAGEN PRINCIPAL</label>
              <input type="file" class="foto-principal" name= "fotoPrinc" id="foto-principal">
              <%if (locals.errors && errors.fotoPrinc){%>
                <div class="text-danger">
                  <%=errors.fotoPrinc.msg%>
                  <%}%>
                </div>
            </div>
        </div>

          <!--<div class="foto">
            <i class="fas fa-camera"></i>
          </div>
          <div class="foto">
            <i class="fas fa-camera"></i>
          </div> -->

        <div class="descripcion-producto">
          <label for="descripcion" class="titulo-formulario-producto">DESCRIPCIÓN</label>
          <textarea rows="8" name="descripcion" id="descripcion"
          ><%= locals.oldData ? oldData.descripcion :null%></textarea>
        </div>

        <div class="precio">
          <label for="precio" class="titulo-formulario-producto">PRECIO</label>
          <input 
          type="tel" 
          name="precio" 
          id="precio"
          class="input-nombre <%=locals.errors && errors.precio ? "is-invalid" :null %> "
            value="<%= locals.oldData ? oldData.precio :null%>">
            
          <% if(locals.errors && errors.precio){%>
            <div class="text-danger">
              <%=errors.precio.msg%>
            </div>
              <% } %> 
            
        </div>

        

        <div class="publicar">
            <label for="sale" class= "titulo-formulario-producto">PUBLICAR:</label>
            <select 
                name="sale" 
                id="sale"
                class="eleccion-opciones <%= locals.errors && errors.sale ?  "is-invalid" : null %>">
            
                <option value="">Elegí una opción</option>

                <option <% if(locals.oldData && locals.oldData.sale =="si"){%>  selected <%}%>
                  value="si">Si</option>
                <option <% if(locals.oldData && locals.oldData.sale =="no"){%>  selected <%}%>
                  value="no">No</option>
            </select>
            
            <div>
              <% if(locals.errors && errors.sale){%>
              <div class="text-danger">
                <%=errors.sale.msg%>
              </div>
                <% } %> 
            </div>
        </div>

        <section class="opciones">
          <table  name="tabla-de-medidas">
            <p class= titulo-formulario-producto>OPCIONES DEL PRODUCTO</p>
              <tr>
                <% for (i=1; i<=3; i++) {%> 
                  <td>Combinación <%=i %></td>
                  <td><select name="color" id="color" class="eleccion-opciones<%= locals.errors && errors.colores ? "is-invalid" : null %>">
                        <option value="">Color</option>
                        <% for (let i=0; i < colores.length; i++) { %> 
                        <option <%if (locals.oldData && locals.oldData.color) { %>
                                <% if (locals.oldData.color == colores[i].color) { %> 
                                selected
                                <% } %> 
                              <% } %> 
                         value="<%= colores[i].id %>"><%=colores[i].color%> 
                        </option>
                        <% } %>
                      </select>
                        <%if (locals.errors && errors.color){%>
                        <div class="text-danger">
                          <%=errors.color.msg%>
                        </div>
                      <%}%>
                  </td>
                  <td><select name="talles" id="talles" class="eleccion-opciones<%= locals.errors && errors.colores ? "is-invalid" : null %>">
                    <option value="">Talle</option>
                    <% for (let i=0; i < talles.length; i++) { %> 
                    <option <%if (locals.oldData && locals.oldData.talle) { %>
                            <% if (locals.oldData.talle == talles[i].size) { %> 
                            selected
                            <% } %> 
                          <% } %> 
                     value="<%= talles[i].id %>"><%=talles[i].size%> 
                    </option>
                    <% } %>
                    </select>
                    <%if (locals.errors && errors.color){%>
                    <div class="text-danger">
                      <%=errors.talle.msg%>
                    </div>
                    <%}%>
                  </td>
                  <td>
                    <select name="stock" id="stock" class="eleccion-opciones<%= locals.errors && errors.stock ? "is-invalid" : null %>">
                      <option value="">Stock</option>
                      <% for (let i=0; i < 5; i++) { %> 
                      <option <%if (locals.oldData && locals.oldData.stock) { %>
                              <% if (locals.oldData.stock == i) { %> 
                              selected
                              <% } %> 
                            <% } %> 
                       value="<%=i%>"><%=i%> 
                      </option>
                      <% } %>
                      </select>
                      <%if (locals.errors && errors.stock){%>
                      <div class="text-danger">
                        <%=errors.stock.msg%>
                      </div>
                      <%}%>
                  </td>
                </tr>
                  <% } %> 
             
           
          </table>
